    @if (ViewBag.Message != null)
    {
        <p style="color:green; text-align:center; font-size:18px">@ViewBag.Message</p>
    }

    <div class="row">
        <!-- Sidebar: Indexed Sources -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">📚 Indexed Sources</div>
                <ul class="list-group list-group-flush">
                    @if (ViewBag.AllDocuments != null && ViewBag.AllDocuments.Count > 0)
                    {
                        foreach (string source in ViewBag.AllDocuments)
                        {
                            <li class="list-group-item">@source</li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No sources found</li>
                    }
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="row g-4">
                <!-- PDF Upload -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header">📄 Upload PDF</div>
                        <div class="card-body">
                            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <input type="file" name="file" class="form-control" accept=".pdf" />
                                </div>
                                <button type="submit" class="btn btn-dark w-100">Upload & Index</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- SQL Indexing -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header">🗃️ Index SQL Data</div>
                        <div class="card-body">

                            <form asp-action="LoadDBData" method="post">

                                <input type="hidden" name="file" value="" />
                                <button type="submit" class="btn btn-dark w-100">Load from Database</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Box -->
            <div class="card mt-5 shadow-sm">
                <div class="card-header">🔎 Semantic Search</div>
                <div class="card-body">
                    <form asp-action="Query" method="post">
                        <div class="input-group mb-3">
                            <input type="text" name="question" class="form-control" placeholder="Enter your question..." />
                            <button type="submit" class="btn btn-dark">Search</button>
                        </div>
                    </form>

                    @if (ViewBag.SourceDocuments != null)
                    {
                        <h5 class="mt-3">📄 Source: <span class="text-primary">@ViewBag.SourceDocuments</span></h5>
                        <hr />
                    }

                    @if (ViewBag.Answer != null)
                    {
                        <div class="alert alert-info">@ViewBag.Answer</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

